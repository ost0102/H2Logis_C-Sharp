@{
    ViewBag.Title = "admin";
    ViewBag.Sub = "VehicleWrite";

    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section stMain {

    @{
        if (ViewBag.MNGT_NO != null)
        {
            <input type="hidden" id="View_MNGT_NO" value="@ViewBag.MNGT_NO" />
            <input type="hidden" id="View_SEQ" value="@ViewBag.SEQ" />
            <input type="hidden" id="View_CAR_DIV_CODE" value="@ViewBag.CAR_DIV_CODE" />
            <input type="hidden" id="View_IMG_NAME" value="@ViewBag.IMG_NAME" />
            <input type="hidden" id="View_IMG_PATH" value="@ViewBag.IMG_PATH" />
            <input type="hidden" id="View_REPLACE_IMG_NAME" value="@ViewBag.REPLACE_IMG_NAME" />
        }
        else
        {
            <input type="hidden" id="View_MNGT_NO" value="" />
            <input type="hidden" id="View_SEQ" value="" />
            <input type="hidden" id="View_CAR_DIV_CODE" value="" />
        }
    }

<div class="st-main">
    <div class="st-header">
        <div class="fluid_cols">
            <div class="min_col">
                <div class="st-header__menu">
                    <button class="btn st-sidebar__toggle"><i class="fa fa-bars"></i></button>
                </div>
            </div>
            <div class="expand-col text-ellipsis">
                <div class="st-header__title"><span>차량제원 관리</span></div>
            </div>
        </div>
    </div>
    <div class="st-content mb50 max_width">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">

                    <div class="st-panel">
                        <div class="st-panel__cont">
                            <div class="st-panel__content ">

                                <!-- 리스트 데이타 -->
                                <div class="row">
                                    <div id="dataTbl" class="col-lg-12">
                                        <table width="100%" class="table table-bordered table-hover tb_style no_head" id="data_table">
                                            <colgroup>
                                                <col width="30%">
                                                <col width="70%">
                                            </colgroup>
                                            <tbody>
                                                <tr>
                                                    <th>구분</th>
                                                    <td>
                                                        <div class="col-md-12 col-sm-12">
                                                            <select class="form-control select" id="select_vehicle_div" name="select_vehicle_div">
                                                                <option value="">Select</option>
                                                            </select>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th>명칭</th>
                                                    <td>
                                                        <div class="col-md-12 col-sm-12">
                                                            @{
                                                            if (ViewBag.CAR_NAME != null)
                                                            {
                                                            <input type="text" class="form-control" id="input_CAR_NAME" value="@ViewBag.CAR_NAME">
                                                            }
                                                            else
                                                            {
                                                            <input type="text" class="form-control" id="input_CAR_NAME" value="">
                                                            }
                                                            }
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th>약칭</th>
                                                    <td>
                                                        <div class="col-md-12 col-sm-12">
                                                            @{
                                                            if (ViewBag.SHORTHAND != null)
                                                            {
                                                            <input type="text" class="form-control" id="input_SHORTHAND" value="@ViewBag.SHORTHAND">
                                                            }
                                                            else
                                                            {
                                                            <input type="text" class="form-control" id="input_SHORTHAND" value="">
                                                            }
                                                            }
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th>적재함 길이</th>
                                                    <td>
                                                        <div class="col-md-12 col-sm-12">
                                                            @{
                                                            if (ViewBag.CAR_WIDTH != null)
                                                            {
                                                            <input type="text" class="form-control" id="input_CAR_WIDTH" value="@ViewBag.CAR_WIDTH">
                                                            }
                                                            else
                                                            {
                                                            <input type="text" class="form-control" id="input_CAR_WIDTH" value="">
                                                            }
                                                            }
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th>탑높이</th>
                                                    <td>
                                                        <div class="col-md-12 col-sm-12">
                                                            @{
                                                            if (ViewBag.TOP_HEIGHT != null)
                                                            {
                                                            <input type="text" class="form-control" id="input_TOP_HEIGHT" value="@ViewBag.TOP_HEIGHT">
                                                            }
                                                            else
                                                            {
                                                            <input type="text" class="form-control" id="input_TOP_HEIGHT" value="">
                                                            }
                                                            }
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th>바닥높이</th>
                                                    <td>
                                                        <div class="col-md-12 col-sm-12">
                                                            @{
                                                            if (ViewBag.BOTTOM_HEIGHT != null)
                                                            {
                                                            <input type="text" class="form-control" id="input_BOTTOM_HEIGHT" value="@ViewBag.BOTTOM_HEIGHT">
                                                            }
                                                            else
                                                            {
                                                            <input type="text" class="form-control" id="input_BOTTOM_HEIGHT" value="">
                                                            }
                                                            }
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th>적재함 넓이</th>
                                                    <td>
                                                        <div class="col-md-12 col-sm-12">
                                                            @{
                                                            if (ViewBag.CAR_AREA != null)
                                                            {
                                                            <input type="text" class="form-control" id="input_CAR_AREA" value="@ViewBag.CAR_AREA">
                                                            }
                                                            else
                                                            {
                                                            <input type="text" class="form-control" id="input_CAR_AREA" value="">
                                                            }
                                                            }
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th>적재중량</th>
                                                    <td>
                                                        <div class="col-md-12 col-sm-12">
                                                            @{
                                                            if (ViewBag.CAR_WEIGHT != null)
                                                            {
                                                            <input type="text" class="form-control" id="input_CAR_WEIGHT" value="@ViewBag.CAR_WEIGHT">
                                                            }
                                                            else
                                                            {
                                                            <input type="text" class="form-control" id="input_CAR_WEIGHT" value="">
                                                            }
                                                            }
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th>적재부피</th>
                                                    <td>
                                                        <div class="col-md-12 col-sm-12">
                                                            @{
                                                            if (ViewBag.CAR_CBM != null)
                                                            {
                                                            <input type="text" class="form-control" id="input_CAR_CBM" value="@ViewBag.CAR_CBM">
                                                            }
                                                            else
                                                            {
                                                            <input type="text" class="form-control" id="input_CAR_CBM" value="">
                                                            }
                                                            }
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th>차량 총 높이</th>
                                                    <td>
                                                        <div class="col-md-12 col-sm-12">
                                                            @{
                                                            if (ViewBag.TOTAL_HEIGHT != null)
                                                            {
                                                            <input type="text" class="form-control" id="input_TOTAL_HEIGHT" value="@ViewBag.TOTAL_HEIGHT">
                                                            }
                                                            else
                                                            {
                                                            <input type="text" class="form-control" id="input_TOTAL_HEIGHT" value="">
                                                            }
                                                            }
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th>특이사항</th>
                                                    <td>
                                                        <div class="col-md-12 col-sm-12">
                                                            @{
                                                            if (ViewBag.RMK != null)
                                                            {
                                                            <textarea class="form-control" id="textarea_RMK" value="@ViewBag.RMK">@ViewBag.RMK</textarea>
                                                            }
                                                            else
                                                            {
                                                            <textarea class="form-control" id="textarea_RMK" value=""></textarea>
                                                            }
                                                            }
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th>이미지 UPLOAD</th>
                                                    <td>
                                                        <div class="col-md-12 col-sm-12">
                                                            <input type="file" id="input_file_upload" name="input_file_upload" class="form-control _upfile">
                                                        </div>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                    <!-- /.col-lg-12 -->
                                </div>
                                <div class="row">
                                    <div class="col-md-5 col-md-offset-5">
                                        <div class="btn-group btn_padding" role="group" aria-label="버튼">
                                            @{
                                            if (ViewBag.MNGT_NO != null)
                                            {
                                            <a href="javascript:void(0);" type="button" id="Modify_Vehicle" class="btn btn-primary pull-right"><i class="fa fa-pencil-square-o"></i>&nbsp;수정</a>
                                            }
                                            else
                                            {
                                            <a href="javascript:void(0);" type="button" id="Insert_Vehicle" class="btn btn-primary pull-right"><i class="fa fa-pencil-square-o"></i>&nbsp;저장</a>
                                            }
                                            }
                                        </div>
                                        <div class="btn-group btn_padding" role="group" aria-label="버튼">
                                            <a href="javascript:void(0);" type="button" id="Move_VehicleList" class="btn btn-primary pull-right _btn_list"><i class="fa fa-th-list"></i>&nbsp;목록</a>
                                        </div>
                                    </div>
                                </div>
                                <!-- /.리스트 데이타 -->
                                <div class="mb20"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="st-footer">
        <div class="copyright">
            Copyrightⓒ 관리자 모드. All right reserved.
        </div>
    </div>

    <div class="layer_zone alert_type" id="layer_complete_alert">
        <div class="layer_wrap">
            <div class="layer_inwrap">
                <article class="layer_cont">
                    <div class="layer_tit">
                        <h1 class="tit"></h1>
                    </div>
                    <!-- alert_cont -->
                    <div class="alert_cont">
                        <div class="inner">
                            데이터가 삭제 되었습니다.
                        </div>
                    </div>
                    <!-- //alert_cont -->
                    <!-- btn_w -->
                    <div class="btn_w">
                        <button type="button" class="btns radius cr1 loginChk" id="btn_save_complete" onclick="layerClose('#alert01');">확인</button>
                    </div>
                    <!-- //btn_w -->
                </article>
            </div>
        </div>
    </div>


</div>
    @Scripts.Render("~/Scripts/js/Admin/_vehiclewrite.js")
}
